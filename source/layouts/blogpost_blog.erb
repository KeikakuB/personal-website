<% wrap_layout :layout do %>
  <div class="blog-content container">
    <%= page_title(current_page.data.title) %>
    <%= try_page_video(current_article) %>
    <%= try_page_images(current_article) %>
    <%= page_links(current_page) %>
    <%= page_info(current_article) %>
    <div class="row justify-content-center readable">
      <%= yield %>
      <blockquote>
        <a href="http://twitter.com/strategineer">If you'd like to be notified whenever I post a new essay, follow me on twitter</a>. If you want to discuss everything about anything, you can reach me at <a href="mailto:me@strategineer.com">me@strategineer.com</a>.
      </blockquote>
    </div>
    <%= partial "footer_desktop" %>
  </div>
<% end %>
