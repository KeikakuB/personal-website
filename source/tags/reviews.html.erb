---
pageable: true
per_page: 12
blog: reviews
---
<% content_for :header do %>
    <%= feed_tag :atom, "#{blog('reviews').options.prefix.to_s}/feed.xml", title: "Atom Feed - Reviews" %>
<% end %>
<% content_for :sidebar do %>
    <%= partial "sidebar_reviews" %>
<% end %>
<h1>Articles tagged '<%= tagname %>'</h1>

<%= partial "page_number" %>
<%= partial "page_previous" %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e %Y') %></span></li>
  <% end %>
</ul>

<%= partial "page_next" %>
