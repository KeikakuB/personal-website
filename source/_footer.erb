<nav class="footer">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="row justify-content-center">
        <img class="mx-auto" src="/images/portrait.png" style="height: 175px; width: 175px;" alt="Memoji of Bill">
      </div>
      <div class="row justify-content-center">
          <div class="col-12 text-center" style="margin-top: 0.5em;">I'm a software engineer living in Montreal, Canada. I write about video games, tech and my life.
          </div>
          <div class="col-12 text-center" style="margin-top: 0.5em;">Read more <a href="/index.html">about me</a> or <a href="mailto:me@btyros.com">poke me</a>.
          </div>
      </div>
      <% if has_tags?(current_page) %>
      <div class="row justify-content-center">
      <%= page_tags(current_page) %>
      </div>
      <% end %>
      <% blog_id = ""%>
      <% blog_name = ""%>
      <% blog_archive = ""%>
      <% is_blog = current_page.path.start_with?("journals/") %>
      <% is_project = current_page.path.start_with?("projects/") %>
      <% is_review = current_page.path.start_with?("reviews/") %>
      <% if is_blog %>
        <% blog_id = "journals"%>
        <% blog_name = "blog posts"%>
        <% blog_archive = "/blog.html"%>
      <% elsif is_project %>
        <% blog_id = "projects"%>
        <% blog_name = "projects"%>
        <% blog_archive = "/projects.html"%>
      <% elsif is_review %>
        <% blog_id = "reviews"%>
        <% blog_name = "reviews"%>
        <% blog_archive = "/reviews.html"%>
      <% end %>
      <% if is_blog or is_project or is_review %>
        <div class="row justify-content-center">
          Recent <%= blog_name %>:
        </div>
        <% ls = get_articles_shortlist(10, blog_id) %>
        <ul class="articles-shortlist">
          <% ls[0].each do |article| %>
            <li><%= link_to article.title, article %></li>
          <% end %>
          <% if ls[1] > 0 %>
            <li><a href="<%= blog_archive %>">... with <%= ls[1] %> more <%= blog_name %> in the archive</a>.</li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
